<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd"
       default-lazy-init="true" default-autowire="constructor">

    <bean id="awsPinpointSmsGatewayAdapter"
          class="lt.boldadmin.nexus.plugin.aws.pinpoint.AwsPinpointSmsGatewayAdapter"/>

    <bean id="amazonPinpointClientFactory"
          class="lt.boldadmin.nexus.plugin.aws.pinpoint.factory.AmazonPinpointClientFactory"/>

    <bean id="sendMessageRequestFactory"
          class="lt.boldadmin.nexus.plugin.aws.pinpoint.factory.SendMessagesRequestFactory"/>

    <bean id="directMessageConfigurationFactory"
          class="lt.boldadmin.nexus.plugin.aws.pinpoint.factory.DirectMessageConfigurationFactory"/>

    <bean id="messageRequestFactory"
          class="lt.boldadmin.nexus.plugin.aws.pinpoint.factory.MessageRequestFactory"/>

</beans>